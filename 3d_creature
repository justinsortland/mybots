import matplotlib.pyplot as plt
import numpy as np

# create a figure and axis object
fig, ax = plt.subplots()

# set the x and y axis labels
ax.set_xlabel('Generation')
ax.set_ylabel('Fitness Value')

# set the y-axis scale to approximate a square root function
ax.set_ylim([0, 2.5**2])

# create an array of x values and flatten the square root function
x = np.linspace(0, 100, 1000)
y = np.sqrt(x) + np.random.normal(loc=0, scale=0.1, size=len(x)) - 0.4 * x / 100

# plot the modified square root function
ax.plot(x, y, color='red')

# display the plot
plt.show()